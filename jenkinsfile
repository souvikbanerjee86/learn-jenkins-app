pipeline {
    agent any

    stages {
        
        stage('build') {
            agent {
                docker {
                    image 'node:latest' // Replace with your Node.js image
                    args '-v /var/lib/jenkins/workspace:/var/lib/jenkins/workspace'
        }
            }
            steps {
               sh 'npm cache clean --force'
               sh 'npm ci'
            }
        }
    }
}
