pipeline {
    agent any

    stages {
        
        stage('build') {
            agent {
                docker {
                    image 'node:latest' // Replace with your Node.js image
                    args '-u root:root' // Run as root (adjust as needed)
                    reuseNode true
        }
            }
            steps {
               sh '''
               npm cache clean --force
               npm ci
               npm run build
               ls -la
               '''
            }
        }

        stage('Test') {
            
            steps {
               sh '''
               echo "Test stage"
               test build/index.html
               npm test
               '''
            }
        }
    }
}
